<% include partials/header %>
<div class="ui main text container segement">
    <h2 class="ui center aligned icon header">
    <i class="comment outline icon teal"></i>
    Edit
    </h2>

    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" aria-label="Title of Blog post to edit" name="blog[title]" value="<%=blog.title%>" required="required">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" aria-label="Image URL for blog edit" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Body</label>
            <textarea rows="6" aria-label="Body of Blog post to edit" name="blog[body]" required="required"><%- blog.body %></textarea>
        </div>
        <button class="ui teal button">Edit this post</button>
    </form>
</div>
<% include partials/footer %>